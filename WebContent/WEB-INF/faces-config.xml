<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	
	<managed-bean>
    <managed-bean-name>TransporteBean</managed-bean-name>
    <managed-bean-class>bean.TransporteBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    <managed-bean-name>MarcaBean</managed-bean-name>
    <managed-bean-class>bean.MarcaBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
    
    <navigation-case>
    <from-outcome>PRINCIPAL</from-outcome>
    <to-view-id>/principal.xhtml</to-view-id>
    </navigation-case>
    
    <navigation-case>
    <from-outcome>TRANSPORTE</from-outcome>
    <to-view-id>/xhtml/transporte.xhtml</to-view-id>
    </navigation-case>
    
    <navigation-case>
    <from-outcome>TRANSPORTE_ELIMINAR</from-outcome>
    <to-view-id>/xhtml/transporte_eliminar.xhtml</to-view-id>
    </navigation-case>
    
    <navigation-case>
    <from-outcome>TRANSPORTE_BUSCAR</from-outcome>
    <to-view-id>/xhtml/transporte_buscar.xhtml</to-view-id>
    </navigation-case>
    
    </navigation-rule>
    
    <application>		
		<message-bundle>resources.application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>

</faces-config>
